<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <BorderPane style="-fx-padding: 20">
        <top>
            <HBox style="-fx-padding: 20" alignment="CENTER">
                <Label alignment="CENTER" textAlignment="CENTER" style="-fx-font-size: 1.5em" fx:id="headerText" />
             </HBox>
        </top>
        <center>
            <VBox alignment="CENTER" spacing="10">
                <Label fx:id="currentCredentialLabel" />
            </VBox>
        </center>
        <left>
            <Button alignment="CENTER" prefWidth="30" prefHeight="30" style="-fx-background-radius: 50%" fx:id="leftButton"/>
        </left>
        <right>
            <Button alignment="CENTER" prefWidth="30" prefHeight="30" style="-fx-background-radius: 50%" fx:id="rightButton"/>
        </right>
    </BorderPane>
    <VBox
        alignment="CENTER"
        VBox.vgrow="ALWAYS"
        maxHeight="Infinity"
        minWidth="330"
        prefWidth="330"
        style="-fx-background-color: #bbbbbb; -fx-padding: 10"
        fx:id="credentialHolder"
    />

    <HBox spacing="10" style="-fx-padding: 10">
        <Button text="Add new credential" fx:id="addCredentialButton" />
        <Region HBox.hgrow="ALWAYS" maxWidth="Infinity" />
        <Button text="Done" fx:id="doneButton" />
    </HBox>
</VBox>
